<h1>Listing tasks</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Runmachine</th>
    <th>Runtime</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= best_in_place task, :name %></td>
    <td><%= best_in_place task, :runmachine %></td>
    <td><%= task.runtime.strftime("%H:%M:%S") %></td>
    <td><a href = "/tcs/<%= task.id %>">Show</a></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

